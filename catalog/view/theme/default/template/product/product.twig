                            <li>
                                <span>{{ text_product_category }} :</span>
                                <h5>{{ categories }}</h5>
                            </li>
                            {% if manufacturer %}
                                <li>
                                    <span>{{ text_manufacturer }}</span>
                                    <a href="{{ manufacturers }}">
                                        {{ manufacturer }}
                                    </a>
                                </li>
                            {% endif %}
