{{ header }}
<div class="main" role="main">
    <div class="container page-heading">
        <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
        </ul>
    </div><!--End Container-->
    <div class="page-content">
        <section class="section-30">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="product-show-wrapper">
                            {% if thumb or images %}
                                {% if thumb %}
                                    <div class="general-img">
                                        <img id="show-product" title="{{ heading_title }}" src="{{ thumb }}"
                                             data-zoom-image="{{ thumb }}">
                                    </div>
                                {% endif %}
                                <div class="thumblist-box">
                                    <a href="#" class="btn prev">
                                        <i class="fa fa-arrow-left"></i>
                                    </a>
                                    <a href="#" class="btn next">
                                        <i class="fa fa-arrow-right"></i>
                                    </a>
                                    <div id="show-product-gal">
                                        {% if images %}
                                            {% for image in images %}
                                                <a href="{{ image.popup }}" data-image="{{ image.popup }}"
                                                   data-zoom-image="{{ image.popup }}">
                                                    <img alt="{{ heading_title }}" src="{{ image.popup }}">
                                                </a>
                                            {% endfor %}
                                        {% endif %}
                                    </div><!--End show-product-gal-->
                                </div><!--End thumblist-box-->
                            {% endif %}
                        </div><!--End product-show-wrapperr-->
                    </div><!--End col-md-4-->

                    <div class="col-sm-7 col-md-5">
                        <div class="product-information">
                            <h2 class="product-title">
                                {{ name }}
                            </h2>
                            <div class="reviews-box">
                                <ul class="rating">
                                    {% for i in 1..5 %}
                                        {% if rating > i %}
                                            <li><i class="fa fa-star"></i></li>
                                        {% else %}
                                            <li><i class="far fa-star"></i></li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                                <a href="#reviews" class="add-review">
                                    {{ entry_review }}
                                </a>
                            </div><!--End reviews-box-->

                            <div class="price-box">
                                {% if price %}
                                    {% if not special %}
                                        <span class="price">{{ price }}</span>
                                    {% else %}
                                        <span class="price">{{ price }}</span>
                                        <s class="price-old">{{ special }}</s>
                                    {% endif %}
                                    {% if points %}
                                        <br>
                                        <span class="price">{{ text_points }} {{ points }}</span>
                                    {% endif %}
                                    {% if discounts %}
                                        <br>
                                        {% for discount in discounts %}
                                            <span class="price">{{ discount.quantity }}{{ text_discount }}{{ discount.price }}</span>
                                        {% endfor %}
                                    {% endif %}
                                {% endif %}

                            </div><!--End price-box-->
                            <button class="custom-btn" id="button-cart">
                                {{ button_cart }}
                            </button>
                            <button class="add-wish" onclick="wishlist.add('{{ product_id }}');">
                                {{ button_wishlist }}
                            </button>
                        </div><!--End product-information-->
                    </div><!--End col-sm-7 col-md-5-->
