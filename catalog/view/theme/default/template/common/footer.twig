<div id="login-dialog" class="mfp-with-anim mfp-hide mfp-dialog">
  <div class="login-register-head">
    <h3> {{ text_returning_customer }}</h3>
    <a class="popup-text" href="#register-dialog" data-effect="mfp-zoom-out">
      {{ text_new_customer }}
    </a>
  </div><!--End login-register-head-->
  <form class="dialog-form">
    <div class="form-group">
      <div class="alert-danger" id="error_login">

      </div>
    </div><!--End col-md-6-->
    <div class="form-group">
      <input class="form-control" value="{{ email }}"  placeholder="{{ entry_email }}" id="login-email" type="email">
    </div><!--End col-md-6-->
    <div class="form-group">
      <input class="form-control" placeholder="{{ entry_password }}" id="login-password" type="password">
    </div><!--End form-group-->
    <div class="form-group">
      <input id="remember" type="checkbox">
      <label for="remember">
        {{ text_remember }}
      </label>
    </div><!--End form-group-->
    <button type="button" id="login_submit" class="custom-btn">{{ button_login }}</button>
    <a class="popup-text dialog-txt" href="#password-recover-dialog" data-effect="mfp-zoom-out">
      {{ text_forgotten }}
    </a>
  </form><!--End dialog-form-->
</div><!--End login-dialog-->

<div id="register-dialog" class="mfp-with-anim mfp-hide mfp-dialog">
  <div class="login-register-head">
    <h3> {{ text_new_customer }}</h3>
  </div><!--End login-register-head-->
  <form class="dialog-form">
    <div class="form-group">
      <div class="alert-danger" id="error_register">

      </div>
    </div><!--End col-md-6-->
    <div class="form-group">
      <input class="form-control" name="name" value="{{ firstname }}" placeholder="{{ entry_firstname }}" id="register-firstname" type="text">
    </div><!--End form-group-->
    <div class="form-group">
      <input class="form-control" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="register-email" type="email">
    </div><!--End form-group-->
    <div class="form-group">
      <input class="form-control" name="telephone" value="{{ telephone }}" placeholder="{{ entry_telephone }}" id="register-telephone"  type="text">
    </div><!--End form-group-->
    <div class="form-group">
      <input class="form-control" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="register-password" type="password">
    </div><!--End form-group-->
    <div class="form-group">
      <input class="form-control" name="confirm" value="{{ confirm }}" placeholder="{{ entry_confirm }}" id="register-confirm" type="password">
    </div><!--End form-group-->
    <button type="button" id="register_submit" class="custom-btn">{{ button_continue }}</button>
  </form>
  <p class="dont-have alrady-member">
    <a class="popup-text dialog-txt" href="#login-dialog" data-effect="mfp-zoom-out">{{ text_account_already }}</a>
  </p>
</div><!--End register-dialog-->
<div id="confirm-dialog" class="mfp-with-anim mfp-hide mfp-dialog">
  <form class="dialog-form">
    <div class="form-group">
      <label for="reset-pass">ادخل كود التفعيل الذي تم ارسالة الي الجوال</label>
      <input id="reset-pass" placeholder="أادخل كود التفعيل" type="text" class="form-control">
    </div><!--End form-group-->
    <div class="form-group">
      <button type="submit" class="custom-btn">
        تأكيد
      </button>
    </div><!--End form-group-->
    <a class="dialog-txt" href="">
      اعادة ارسال الكود
    </a>
  </form>
</div><!-- END dialog-box -->
<div id="password-recover-dialog" class="mfp-with-anim mfp-hide mfp-dialog">
  <form class="dialog-form">
    <div class="form-group">
      <div class="alert-danger" id="error_forget">

      </div>
    </div><!--End col-md-6-->
    <div class="form-group">
      <label for="reset-pass">  {{ text_forget_password }}  </label>
      <input id="reset-pass" placeholder="{{ entry_email }}" type="email" class="form-control">
    </div><!--End form-group-->
    <button type="button" id="forget_submit" class="custom-btn">
      {{ text_reset }}
    </button>
  </form>
</div><!-- END dialog-box -->
<div id="gx-sidemenu" class="gx-sidemenu">
  <div class="gx-sidemenu-inner" id="gx-sidemenu-inner-1">
    <div class="scroll">
      <ul class="gx-menu">


        {% if logged %}
        
          <li class="profile">
	
			
			    <li>
			        <a href="{{ account }}">
			            <i class="far fa-user"></i>
			            {{ text_account }}
			            </a>
			    </li>
		   </li>
          
        {% else %}
       
          
          <li class="profile">
	
			
			    <li><a class="popup-text" href="#login-dialog" data-effect="mfp-move-from-top">{{ text_login }}</a></li>
		   </li>
        {% endif %}

        

        {% for category in categories %}
          {% if category.children %}
            <li>
              <a href="{{ category.href }}">{{ category.name }}</a>

              <ul>
                {% for children in category.children|batch(category.children|length / category.column|round(1, 'ceil')) %}
                  {% for child in children %}
                    <li><a href="{{ child.href }}">{{ child.name }}</a></li>
                  {% endfor %}
                {% endfor %}
              </ul><!--End menu-item-cont-->
            </li>

          {% else %}
            <li><a href="{{ category.href }}">{{ category.name }}</a></li>
          {% endif %}
        {% endfor %}

        {% for information in informations %}
          <li><a href="{{ information.href }}">{{ information.title }}</a></li>
        {% endfor %}

        <div class="side-social">
          <div class="social-list">
            {% if facebook %}
              <a href="{{ facebook }}" target="_blank">
                <i class="fab fa-facebook"></i>
              </a>
            {% endif %}
            {% if twitter %}
              <a href="{{ twitter }}" target="_blank">
                <i class="fab fa-twitter"></i>
              </a>
            {% endif %}
            {% if instagram %}
              <a href="{{ instagram }}" target="_blank">
                <i class="fab fa-instagram"></i>
              </a>
            {% endif %}
            {% if whatsapp %}
              <a href="{{ whatsapp }}" target="_blank">
                <i class="fab fa-whatsapp"></i>
              </a>
            {% endif %}

          </div><!--End social-list-->
        </div><!--End perfumes-apps-social-->


      </ul><!--End gx-menu-->
    </div><!--End scroll-->
  </div><!--End gx-sidemenu-inner-->
</div><!--End gx-sidemenu-->
