<script>
  $(document).ready(function () {
    $("#send_newsletters").on('click', function () {
      $.ajax({
        url: '{{ newsletter_form }}',
        type: 'post',
        dataType: 'json',
        data: {'email': $('#email').val()},
        success: function (response) {
          if (Array.isArray(response.error)) {
            let errorStr = "";
            response.error.forEach(function (e) {
              errorStr += e;
            });
            $.notify(errorStr, "error");
          }
          if (response.success) {
            $.notify(response.success, "success");
          }

          $('#email').val('')
        }
      });

    });

    $('body').on('click','.product_modal',function () {
      $.ajax({
        url: `{{ product }}&product_id=${$(this).attr('data-src')}`,
        type: 'get',
        success: function (response) {
          $("#product-modal").html(response);
          $("#product-modal").modal('toggle');
        }
      });
    })


    $("#login_submit").on('click', function () {
      $("#error_login").html('');
      $.ajax({
        url: '{{ login }}',
        type: 'post',
        dataType: 'json',
        data: {
          'email': $('#login-email').val()? $('#login-email').val() : '',
          'password': $('#login-password').val()? $('#login-password').val() : ''
        },
        success: function (response) {
          if (response.error){
            for(item of response.error){
              $("#error_login").append(`<li>${item}</li>`)
            }
          } else if (response.success){
              location.reload();
          } else{

          }
        }
      });

    });

    $("body").on('click','#register_submit', function () {
      $("#error_register").html('');
      $.ajax({
        url: '{{ register }}',
        type: 'post',
        dataType: 'json',
        data: {
          'firstname': $('#register-firstname').val(),
          'email': $('#register-email').val(),
          'password': $('#register-password').val(),
          'telephone': $('#register-telephone').val(),
          'confirm': $('#register-confirm').val(),
        },
        success: function (response) {
          if (response.error){
            for(item of response.error){
              $("#error_register").append(`<li>${item}</li>`)
            }
          } else if (response.success){
            location.reload();
          } else{

          }
        }
      });

    });

    $("body").on('click','#forget_submit', function () {
      $("#error_forget").html('');
      $.ajax({
        url: '{{ forgotten }}',
        type: 'post',
        dataType: 'json',
        data: {
          'email': $('#reset-pass').val(),
        },
        success: function (response) {
          if (response.error){
            for(item of response.error){
              $("#error_forget").append(`<li>${item}</li>`)
            }
          } else if (response.success){
            $.notify( response.message , "success");

          } else{

          }
        }
      });

    });

  });
</script>
