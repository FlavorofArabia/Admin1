<div class="main" role="main">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div id="home-slider" class="home-slider carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for banner in banners %}
                            <li data-target="#home-slider" data-slide-to="{{ loop.index }}" class="{% if loop.first %} active {% endif %}"></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        {% for banner in banners %}
                            <div class="item {% if loop.first %} active {% endif %}">
                                {% if banner.link %}
                                    <a href="{{ banner.link }}">
                                        <img src="{{ banner.image }}" alt="{{ banner.title }}" />
                                    </a>
                                {% else %}
                                    <img src="{{ banner.image }}" alt="{{ banner.title }}" />
                                {% endif %}
                            </div>
                        {% endfor %}
                        </div>
                </div><!--End home-slider-->

                <div class="slider-text">
                    <div class="row">

                        {% for item in slider_menu %}
                            <div class="col-md-3">
                                <a href="{{ item.link }}">
                                    <img src="{{ item.image }}" alt="{{ item.title }}">
                                    <p>{{ item.title }}</p>
                                </a>
                            </div><!--End col-->
                        {% endfor %}
                    </div><!--End Row -->
                </div><!--End slider-text-->
            </div><!--End col-md-9-->
        </div><!--End row-->
    </div><!--End container-->